Sub show_hide_legend
 if show_legend then 
   close window LEGEND
   show_legend = 0
   Alter Button 10008
    Uncheck
  else 
  Set window LEGEND  
   Title "Легенда"
   Position (13.5,6.5) Units "cm"   
   Width 7.5 Units "cm"
   Height 8 Units "cm"
   SysMenuClose Off
   Front

   Open window LEGEND
   show_legend = 1
   Alter Button 10008
    check
 end if
end sub 
